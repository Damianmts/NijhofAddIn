<Page x:Class="WPFNetFrame48.Views.TreeViewPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFNetFrame48.ViewModels" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:busy="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
        mc:Ignorable="d"
        Title="TreeViewPage">

    <Page.DataContext>
        <local:TreeViewViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- TreeView in de eerste kolom -->
        <Border Grid.Column="0"
                CornerRadius="2"
                Background="White"
                Margin="10,10,10,45">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5"
                                  Direction="0"
                                  Opacity="0.3"
                                  Color="Black" />
            </Border.Effect>
            <syncfusion:SfTreeView x:Name="SfTreeView"
                                   ItemsSource="{Binding RootFiles}"
                                   ChildPropertyName="SubFiles"
                                   ShowLines="True"
                                   ShowRootLines="True"
                                   NodePopulationMode="Instant"
                                   IsAnimationEnabled="False"
                                   SelectionMode="Extended"
                                   FocusVisualStyle="{x:Null}"
                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                                   QueryNodeSize="SfTreeView_QueryNodeSize"
                                   SelectedItem="{Binding SelectedFolder, Mode=TwoWay}"
                                   Margin="0">
                <syncfusion:SfTreeView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ItemName}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   MaxWidth="200"
                                   TextWrapping="Wrap"
                                   TextTrimming="None" />
                    </DataTemplate>
                </syncfusion:SfTreeView.ItemTemplate>
            </syncfusion:SfTreeView>
        </Border>

        <!-- ListView in de tweede kolom -->
        <Border Grid.Column="1"
                CornerRadius="2"
                Background="White"
                Margin="10,10,10,45">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5"
                                  Direction="0"
                                  Opacity="0.3"
                                  Color="Black" />
            </Border.Effect>
            <ListView ItemsSource="{Binding SelectedFolderContent}"
                      BorderThickness="0"
                      Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      Margin="0">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   IsItemsHost="True"
                                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Width="130" HorizontalAlignment="Center">
                            <Image Source="{Binding Thumbnail}"
                                   Width="120"
                                   Height="120"
                                   Stretch="UniformToFill" />
                            <TextBlock Text="{Binding ItemName}"
                                       TextAlignment="Center"
                                       Margin="0,5,0,0"
                                       TextWrapping="Wrap"
                                       FontSize="14" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <StackPanel Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Orientation="Horizontal" 
                    Margin="10,0,10,10">
            <Border CornerRadius="2" 
                    Background="White" 
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0.5" 
                                      Direction="0" 
                                      Opacity="0.3" 
                                      Color="Black"/>
                </Border.Effect>
                <Button Content="Laden" 
                        Width="100" 
                        Height="25"
                        FontSize="14"/>
            </Border>

            <Border CornerRadius="2" 
                    Background="White" 
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0.5" 
                                      Direction="0" 
                                      Opacity="0.3" 
                                      Color="Black"/>
                </Border.Effect>
                <Button Content="Plaatsen" 
                        Width="100" 
                        Height="25"
                        FontSize="14"/>
            </Border>

            <Border CornerRadius="2" 
                    Background="White">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0.5" 
                                      Direction="0" 
                                      Opacity="0.3" 
                                      Color="Black"/>
                </Border.Effect>
                <Button Content="Sluiten" 
                        Width="100" 
                        Height="25"
                        FontSize="14"/>
            </Border>
        </StackPanel>

        <!-- BusyIndicator overlay -->
        <busy:SfBusyIndicator Grid.Column="1"
                              IsBusy="{Binding IsInitializing}"
                              AnimationType="Fluent"
                              ViewboxHeight="100"
                              ViewboxWidth="100"
                              Foreground="Black"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Panel.ZIndex="1000"
                              Visibility="{Binding IsInitializing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <busy:SfBusyIndicator.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="Bestanden laden..."
                               TextAlignment="Center"
                               FontSize="14"
                               Margin="50,0,0,0"
                               Width="150"
                               Foreground="Black" />
                </DataTemplate>
            </busy:SfBusyIndicator.HeaderTemplate>
        </busy:SfBusyIndicator>
    </Grid>
</Page>
