<Window x:Class="NijhofAddIn.Revit.Core.SelectViewTemplateWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NijhofAddIn.Revit.Core"
        mc:Ignorable="d" 
             Width="700" Height="250" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Selecteer gewenste viewtemplate voor je 3D" Foreground="Black" Margin="46,22,188,79"></Label>
        <ComboBox Grid.Row="0" x:Name="_3DViewTempaltes" Margin="46,56,43,26" />
        <Button Grid.Row="1" x:Name="Create" Content="Select template" Margin="46,11,249,20" Click="Create_Click" />
        <Button Grid.Row="1" x:Name="Cancels" Content="Cancel" Margin="475,11,59,20" Click="Cancel" />
    </Grid>
</Window>
